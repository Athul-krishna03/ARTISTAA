<style>
    .account-dropdown {
    min-width: 200px;
    padding: 15px;
}

.account-dropdown ul {
    padding: 0;
    margin: 0;
    list-style: none;
}

.account-dropdown ul li {
    border-bottom: 1px solid #f2f2f2;
}

.account-dropdown ul li:last-child {
    border-bottom: none;
}

.account-dropdown ul li a {
    padding: 8px 0;
    display: block;
    color: #253D4E;
    font-size: 13px;
}

.account-dropdown ul li a:hover {
    color: #3BB77E;
}

.header-action-icon-2:hover .account-dropdown {
    transform: translateY(0);
    visibility: visible;
    opacity: 1;
}

.header-action-2 .header-action-icon-2 {
    position: relative;
    padding: 0 10px;
}

.header-action-2 .header-action-icon-2 > a {
    display: flex;
    align-items: center;
    text-decoration: none;
}

.header-action-2 .header-action-icon-2 .lable {
    margin: 5px;
    font-size: 14px;
    color: #253D4E;
}

.cart-dropdown-wrap.account-dropdown {
    position: absolute;
    right: 0;
    top: 100%;
    z-index: 99;
    background: #fff;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border-radius: 8px;
    margin-top: 10px;
    transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
}

.header-action-icon-2:hover .cart-dropdown-wrap.account-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.cart-dropdown-wrap.account-dropdown::before {
    content: "";
    position: absolute;
    top: -10px;
    right: 20px;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 10px solid #fff;
}

.mr-10 {
    margin-right: 10px;
}
</style>

